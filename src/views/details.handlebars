<h1 class="bg-success-subtle p-2 text-center text-success w-100">DETAILS</h1>
<section class="d-flex flex-wrap justify-content-evenly">
    <div class="card m-1" style="width: 18rem;">
        <img src={{product.image}} class="card-img-top object-fit-cover" style="height: 12rem;" alt={{product._id}}>
        <div class="card-body d-flex flex-column justify-content-center">
            <h5 class="card-title">{{product.title}}</h5>
            <p class="card-text">USD{{product.price}}</p>
            <button class="btn btn-success">add to cart</button>
        </div>
    </div>
</section>